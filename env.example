# Environment Variables Template
# Copy this file to .env for development or .env.production for Docker production

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dental_clinic"

# NextAuth
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-secret-key-here"

# MinIO Configuration
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET_NAME="dental-clinic"
MINIO_USE_SSL=false

# Application Settings
NODE_ENV=development
PORT=3002

# Email (optional - for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@dentalclinic.com"

# SMS.ir Configuration (for notifications)
# Get your API key from: https://sms.ir/panel
SMS_IR_API_KEY="your-sms-ir-api-key-here"
SMS_IR_LINE_NUMBER="your-sms-ir-line-number"

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Optional: Error Tracking
# SENTRY_DSN=your-sentry-dsn
